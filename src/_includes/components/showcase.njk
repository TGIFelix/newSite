<section id="Showcase" class="w-screen min-h-screen border-b-4 border-current">
	<div class="container">
		<div class="text-3xl text-right">
			#Showcase__
		</div>

		{% for item in collections.showcase %}
			<div class="grid grid-cols-1 gap-4 pt-10 lg:grid-cols-2 lg:pt-20 showcase__item">

				<div class="overflow-hidden group">
					<img src="{{ item.data.image }}" alt="{{ item.data.alt }}" class="transition-transform duration-300 group-hover:scale-105">
				</div>

				<div class="flex flex-col justify-between space-y-8">
					<p class="text-2xl text-left sm:text-4xl">
						{{ item.data.description }}
					</p>
					<div>
						<div class="pt-2 pb-8 text-sm text-left border-t-2 border-current">{{ item.data.meta }}</div>
						<div class="pt-2 pb-8 text-sm text-left border-t-2 border-current">
							{% if item.data.link %}
								<a href="{{ item.data.link }}" target="_blank" rel="noopener noreferrer" class="styled">Link ⇲</a>
							{% endif %}
							{% if item.data.source %}
								<a href="{{ item.data.source }}" target="_blank" rel="noopener noreferrer" class="styled">Source ⇲</a>
							{% endif %}
						</div>
					</div>
				</div>

			</div>
		{% endfor %}
	</div>	
</section>

<style>
	.showcase__item:nth-child(even) { direction: rtl; }
</style>